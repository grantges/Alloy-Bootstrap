            <View id='titleContainer' class='row size top'>
                <Icon id="indicatorIcon" icon="icon-height" class="gray small-text size" />
                <Label id="indicatorTitle" left="5" class="gray size small-text" text="Altitude"/>
            </View>
            <View id="valueContainer" top="5" class="hgroup size bottom">
                <Label id="indicatorValue" class="gray h3" text="3600" ellipsize="Ti.UI.TEXT_ELLIPSIZE_TRUNCATE_CLIP"/>
                <Label id="indicatorUOM" left="5" class="gray size small-text" text="ft"/>
            </View>
        </View>
    </View>
</Alloy>